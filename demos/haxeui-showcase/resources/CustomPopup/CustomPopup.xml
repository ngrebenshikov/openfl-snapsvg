<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	<hbox>
		<grid columns="2">
			<text text="Title" />
			<textinput id="title" text="Custom" width="150" />
			
			<text text="Buttons" />
			<checkbox id="okButton" text="OK" selected="true" />
			
			<spacer />
			<checkbox id="cancelButton" text="Cancel" selected="true" />
			
			<spacer />
			<checkbox id="confirmButton" text="Confirm" />
			
			<spacer />
			<checkbox id="yesButton" text="Yes" />
			
			<spacer />
			<checkbox id="noButton" text="No" />
		</grid>
		<spacer width="20" />
		<button id="showButton" text="Show Popup" />
	</hbox>
</vbox>