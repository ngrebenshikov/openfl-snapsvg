<?xml version="1.0" encoding="utf-8" ?>
<vbox>
	<hbox>
		<grid columns="4">
			<text text="Width" />
			<hslider id="width" max="280" pos="200" width="150"/>
			<text id="widthLabel" text="???" width="35" autoSize="false" />
			<spacer />
			
			<text text="Height" />
			<hslider id="height" max="450" pos="200" width="150"/>
			<text id="heightLabel" text="???" width="35" autoSize="false" />
			<spacer />

			<spacer />
			<checkbox id="autoSize" text="Auto Size" selected="true" />
			<spacer />
			<spacer />
			
			<spacer />
			<checkbox id="clipContent" text="Clip Content" />
			<spacer />
			<spacer />
			
			<spacer />
			<checkbox id="disabled" text="Disabled" />
			<spacer />
			<spacer />
			
			<spacer height="20" />
			<spacer />
			<spacer />
			<spacer />
			
			<text text="Child" />
			<listSelector id="child" text="Button1" verticalAlign="top" selectedIndex="0" width="150" autoSize="false">
				<array>Button1,Button2,Button3,Button4</array>
			</listSelector>
			<spacer />
			<spacer />
			
			<text text="Width" />
			<hslider id="childWidth" max="100" pos="50" width="150"/>
			<text id="childWidthLabel" text="???" width="35" autoSize="false" />
			<checkbox id="childWidthAsPercent" text="%" verticalAlign="bottom" />
			
			<text text="Height" />
			<hslider id="childHeight" max="100" pos="50" width="150"/>
			<text id="childHeightLabel" text="???" width="35" autoSize="false" />
			<checkbox id="childHeightAsPercent" text="%" verticalAlign="bottom" />
			
			<text text="HAlign" />
			<listSelector id="halign" text="left" selectedIndex="0" width="150" autoSize="false">
				<array>left,center,right</array>
			</listSelector>
			<spacer />
			<spacer />
		</grid>
		
		<spacer width="20" />
		
		<vbox id="theBox" style="borderSize:1;padding:5;borderColor:0x000000" autoSize="true" width="100" height="225">
			<button id="Button1" text="1" width="100" height="50" autoSize="false"/>
			<button id="Button2" text="2" width="50" horizontalAlign="right" height="50" autoSize="false"/>
			<button id="Button3" text="3" width="50" horizontalAlign="center" height="50" autoSize="false"/>
			<button id="Button4" text="4" width="50" horizontalAlign="left" height="50" autoSize="false"/>
		</vbox>
	</hbox>
</vbox>